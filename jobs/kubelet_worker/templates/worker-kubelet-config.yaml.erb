apiVersion: v1
kind: Config
clusters:
- name: local
  cluster:
    certificate-authority: <%= p("kubernetes.kubelet_worker.ssl_dir") %>/ca.pem
users:
- name: kubelet
  user:
    client-certificate: <%= p("kubernetes.kubelet_worker.ssl_dir") %>/worker.pem
    client-key: <%= p("kubernetes.kubelet_worker.ssl_dir") %>/worker-key.pem
contexts:
- context:
    cluster: local
    user: kubelet
  name: kubelet-context
current-context: kubelet-context
